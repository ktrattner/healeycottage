---
const { title = "Healey Cottage" } = Astro.props;
---
<!doctype html>
<html lang="en-CA">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <meta name="description" content="Healey Cottage: check availability and request a stay (approval required)." />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Hurricane&display=swap" rel="stylesheet">

  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    crossorigin="anonymous"
    referrerpolicy="no-referrer"
  />
  <style>
    :root {
      --bg: #ffffff;
      --text: #111111;
      --muted: rgba(0,0,0,.68);
      --border: rgba(0,0,0,.12);
      --border-strong: rgba(0,0,0,.22);
      --card: #ffffff;
      --max: 980px;
      --pad: 22px;
      --radius: 16px;
    }

    * { box-sizing: border-box; }
    html, body { height: 100%; }
    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      line-height: 1.45;
    }

    :global(a:link),
    :global(a:visited) { color: var(--text); }

    :global(a:hover) { text-decoration: underline; }

    /* Global button styles */
    :global(.btn) {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 14px;
      border-radius: 12px;
      border: 1px solid rgba(0,0,0,.12);
      text-decoration: none;
      background: transparent;
      color: inherit;
      font-weight: 600;
      transition: transform .12s ease, box-shadow .12s ease, filter .12s ease;
    }

    :global(.btn:hover) {
      text-decoration: none;
      transform: translateY(-1px);
      box-shadow: 0 4px 12px rgba(0,0,0,.08);
    }

    :global(.btn.primary) {
      background: #111;
      color: #fff;
      border-color: #111;
    }

    :global(.btn.primary:hover) {
      filter: brightness(1.05);
    }

    .container {
      max-width: var(--max);
      margin: 0 auto;
      padding: 0 var(--pad);
      padding-inline: clamp(18px, 4vw, 32px);
    }

    header {
      position: sticky;
      top: 0;
      z-index: 10;
      background: rgba(255,255,255,.92);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border);
    }

    .nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 14px;
      padding: 14px 0;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
    }

    .brand:hover {
      text-decoration: none;
    }

    .brand i {
      font-size: 18px;
      opacity: 0.8;
      margin: 0 6px;
    }

    .brandText {
      font-family: "Hurricane", cursive;
      font-weight: 400;
      font-size: clamp(26px, 6vw, 32px);
      letter-spacing: 0.04em;
      white-space: nowrap;
    }

    .navLinks {
      display: flex;
      align-items: center;
      gap: 10px;
      flex-wrap: nowrap;
      white-space: nowrap;
    }

    .navLinks a {
      text-decoration: none;
      padding: 8px 10px;
      border-radius: 10px;
      border: 1px solid transparent;
      color: var(--muted);
    }

    .navLinks a:visited {
      color: var(--muted);
    }

    .navLinks a:hover {
      color: var(--text);
      border-color: var(--border);
      text-decoration: none;
    }

    @media (max-width: 420px) {
      .navLinks a {
        padding: 6px 8px;
        font-size: 14px;
      }
    }

    .layoutMain {
      padding: 28px 0 60px;
    }

    /* Handy utilities for pages */
    .card {
      background: var(--card);
      border: 1px solid var(--border);
      border-radius: var(--radius);
      padding: 16px;
    }

    .muted { color: var(--muted); }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <nav class="nav" aria-label="Primary">
        <a class="brand" href="/">
          <span class="brandText">
            Healey Cottage
          </span>
        </a>
        <div class="navLinks">
          <a href="/rooms">Rooms</a>
          <a href="/availability">Availability</a>
          <a href="/request">Request</a>
        </div>
      </nav>
    </div>
  </header>

  <main class="layoutMain">
    <div class="container">
      <slot />
    </div>
  </main>
</body>
</html>