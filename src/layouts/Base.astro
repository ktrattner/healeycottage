---
import "../styles/global.css";

const { title = "Healey Cottage" } = Astro.props;
---
<!doctype html>
<html lang="en-CA">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{title}</title>
  <meta name="description" content="Healey Cottage: check availability and request a stay (approval required)." />
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="Healey" />
  <link rel="manifest" href="/site.webmanifest" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Hurricane&family=Playfair+Display:wght@400;500;600&display=swap" rel="stylesheet">

  <style>
    :root {
      --bg: #ffffff;
      --max: 980px;
      --pad: 22px;
    }

    * { box-sizing: border-box; }
    html, body { height: 100%; }
    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      line-height: 1.45;
    }

    .container {
      max-width: var(--max);
      margin: 0 auto;
      padding: 0 var(--pad);
      padding-inline: clamp(18px, 4vw, 32px);
    }

    header {
      position: sticky;
      top: 0;
      z-index: 10;
      background: rgba(255,255,255,.92);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid var(--border);
    }

    .nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 14px;
      padding: 14px 0;
    }

    .brand {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
    }

    .brand:hover {
      text-decoration: none;
    }

    .brandText {
      font-family: "Hurricane", cursive;
      font-weight: 400;
      font-size: clamp(26px, 6vw, 32px);
      letter-spacing: 0.04em;
      white-space: nowrap;
    }

    .navLinks {
      display: flex;
      align-items: center;
      gap: 10px;
      flex-wrap: nowrap;
      white-space: nowrap;
    }

    .navLinks a {
      text-decoration: none;
      padding: 8px 10px;
      border-radius: 10px;
      border: 1px solid transparent;
      color: var(--muted);
    }

    .navLinks a:visited {
      color: var(--muted);
    }

    .navLinks a:hover {
      color: var(--text);
      border-color: var(--border);
      text-decoration: none;
    }

    @media (max-width: 420px) {
      .navLinks a {
        padding: 6px 8px;
        font-size: 14px;
      }
    }

    .layoutMain {
      padding: 28px 0 60px;
    }
  </style>
</head>
<body>
  <header>
    <div class="container">
      <nav class="nav" aria-label="Primary">
        <a class="brand" href="/">
          <span class="brandText">Healey Cottage</span>
        </a>
        <div class="navLinks">
          <a href="/rooms">Rooms</a>
          <a href="/availability">Availability</a>
          <a href="/request">Request</a>
        </div>
      </nav>
    </div>
  </header>

  <main class="layoutMain">
    <div class="container">
      <slot />
    </div>
  </main>
</body>
</html>