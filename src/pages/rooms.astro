---
import Base from "../layouts/Base.astro";
import rooms from "../content/rooms.json";
---

<Base title="Rooms | Healey Cottage">
  <h1>Rooms</h1>
  <p class="muted">
    Each room sleeps two. Availability is shown as busy blocks only. Requests require approval.
  </p>

  <div class="grid">
    {rooms.map((r) => (
      <section class="roomCard" tabindex="0" data-href={`/rooms/${r.slug}`}>
        <div class="cardTop">
          <h2><a class="titleLink" href={`/rooms/${r.slug}`}>{r.name}</a></h2>
          <span class="pill">Sleeps {r.sleeps}</span>
        </div>

        <p class="muted">{r.bed} bed</p>

        <div class="cardActions">
          <a class="link" href={`/rooms/${r.slug}`}>View details</a>
          <a class="link" href={`/request?room=${r.slug}`}>Request</a>
        </div>
      </section>
    ))}
  </div>

  <script is:inline>
    // Make the whole card clickable (like the index cards), without breaking the inner links
    document.querySelectorAll(".roomCard[data-href]").forEach((card) => {
      const href = card.getAttribute("data-href");
      if (!href) return;

      card.addEventListener("click", (e) => {
        const t = e.target;
        if (t && t.closest && t.closest("a")) return; // let links behave normally
        window.location.href = href;
      });

      card.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " ") {
          const active = document.activeElement;
          if (active && active.closest && active.closest("a")) return;
          e.preventDefault();
          window.location.href = href;
        }
      });
    });
  </script>

  <style>
    .grid {
      margin-top: 18px;
      display: grid;
      gap: 14px;
      grid-template-columns: repeat(3, 1fr);
    }

    a:link,
    a:visited {
      color: #111;
    }

    @media (max-width: 860px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }

    .roomCard {
      border: 1px solid rgba(0,0,0,.12);
      border-radius: 16px;
      padding: 16px;
      background: #fff;
      display: grid;
      gap: 8px;
      cursor: pointer;
      transition: border-color .15s ease, box-shadow .15s ease, transform .15s ease;
      outline: none;
    }

    .roomCard:hover {
      border-color: rgba(0,0,0,.28);
      box-shadow: 0 6px 18px rgba(0,0,0,.08);
      transform: translateY(-2px);
    }
    .roomCard:focus,
    .roomCard:focus-within {
      border-color: rgba(0,0,0,.28);
      box-shadow: 0 6px 18px rgba(0,0,0,.08);
      transform: translateY(-2px);
    }

    .cardTop {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px;
    }

    .cardTop h2 {
      margin: 0;
      font-size: 18px;
    }

    .titleLink,
    .titleLink:visited {
      color: #111;
      text-decoration: none;
    }
    .titleLink:hover {
      text-decoration: underline;
    }

    .pill {
      font-size: 12px;
      padding: 4px 8px;
      border-radius: 999px;
      border: 1px solid rgba(22, 163, 74, 0.35);
      background: rgba(22, 163, 74, 0.08);
      color: #166534;
      font-weight: 500;
      white-space: nowrap;
    }

    .cardActions {
      margin-top: 12px;
      display: flex;
      justify-content: space-between;
      font-size: 13px;
    }

    .link {
      text-decoration: none;
    }
    .link:hover {
      text-decoration: underline;
    }
  </style>
</Base>