---
import Base from "../../layouts/Base.astro";
import rooms from "../../content/rooms.json";

const room = rooms.find((r) => r.slug === "ravenclaw");
const title = room?.name ?? "Ravenclaw";
---

<Base title={`${title} | Healey Cottage`}>
  <header class="head">
    <div>
      <h1>{title}</h1>
      <p class="muted">
        Bright corner room with a queen bed and plenty of natural light. A great option for couples.
      </p>
    </div>

    <a class="btn primary" href={`/request?room=${encodeURIComponent(title)}`}>Request Ravenclaw</a>
  </header>

  <section class="photos" aria-label="Room photos">
    <div class="photoCard">
      <div class="photoFrame">
        <img
          src="/images/ravenclaw-bed.jpg"
          alt="Ravenclaw bedroom with queen bed"
          loading="lazy"
        />
      </div>
      <p class="cap muted">Bedroom</p>
    </div>

    <div class="photoCard">
      <div class="ph" aria-hidden="true"></div>
      <p class="cap muted">Photo 2: Natural light</p>
    </div>

    <div class="photoCard">
      <div class="ph" aria-hidden="true"></div>
      <p class="cap muted">Photo 3: Shared bath</p>
    </div>
  </section>

  <section class="details card">
    <h2>At a glance</h2>
    <ul>
      <li><b>Bed:</b> Queen</li>
      <li><b>Best for:</b> Couples</li>
      <li><b>Bathroom:</b> Shared hall bathroom (shower and toilet)</li>
      <li><b>Shared with:</b> Hufflepuff guests</li>
      <li><b>Room type:</b> Corner room with lots of natural light</li>
    </ul>

    <div class="note">
      <p class="muted">
        Availability is shown as busy blocks only. To book, submit a request and we’ll confirm by email.
      </p>
      <p>
        <a href="/availability">View availability</a>
        <span> · </span>
        <a href={`/request?room=${encodeURIComponent(title)}`}>Request this room</a>
      </p>
    </div>
  </section>

  <section class="cal">
    <h2>Busy calendar</h2>
    <p class="muted">Public view shows busy blocks only (no details).</p>
    <iframe
      class="frame"
      src={room?.calendarEmbedUrl}
      width="100%"
      height="560"
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
  </section>

  <style>
    .head {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      gap: 14px;
      margin-top: 10px;
      flex-wrap: wrap;
    }

    h1 { margin: 0; }
    .head .muted { margin: 8px 0 0; max-width: 68ch; }

    .photos {
      margin-top: 18px;
      display: grid;
      gap: 12px;
      grid-template-columns: repeat(3, 1fr);
    }
    @media (max-width: 900px) {
      .photos { grid-template-columns: 1fr; }
    }

    .photoCard {
      border: 1px solid var(--border);
      border-radius: var(--radius);
      overflow: hidden;
      background: var(--card);
    }

    .ph {
      aspect-ratio: 4 / 3;
      background: linear-gradient(135deg, rgba(0,0,0,.06), rgba(0,0,0,.02));
    }

    .photoFrame {
      width: 100%;
      aspect-ratio: 4 / 3;
      overflow: hidden;
      background: #fff;
    }

    .photoFrame img {
      width: 100%;
      height: 100%;
      display: block;
      object-fit: cover;
    }

    .cap {
      margin: 0;
      padding: 10px 12px;
      font-size: 13px;
    }

    .details {
      margin-top: 18px;
    }

    .details h2 {
      margin: 0 0 10px;
      font-size: 16px;
    }

    .details ul {
      margin: 0;
      padding-left: 18px;
      display: grid;
      gap: 6px;
    }

    .note {
      margin-top: 14px;
      padding-top: 12px;
      border-top: 1px solid var(--border);
    }

    .cal {
      margin-top: 22px;
    }

    .frame {
      margin-top: 10px;
      border: 1px solid var(--border);
      border-radius: var(--radius);
      overflow: hidden;
    }
  </style>
</Base>